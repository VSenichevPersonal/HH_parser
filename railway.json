{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "plan": {
      "providers": ["node"],
      "services": {
        "app": {
          "buildCommand": "npm run build",
          "startCommand": "npm run start:prod",
          "build": {
            "cache": false
          }
        }
      }
    }
  }
}
