// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../src/generated"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Employer {
  id   BigInt @id
  name String

  vacancies Vacancy[]
}

model Vacancy {
  id                 BigInt     @id
  name               String
  description        String?
  employerId         BigInt?
  employer           Employer?  @relation(fields: [employerId], references: [id])
  areaId             BigInt?
  publishedAt        DateTime?
  archived           Boolean    @default(false)
  url                String?
  salaryFrom         Decimal?
  salaryTo           Decimal?
  currency           String?
  professionalRoles  Json?
  experience         Json?
  updatedAt          DateTime?  @updatedAt
  tsv                Unsupported("tsvector")?

  skills VacancySkill[]
}

model VacancySkill {
  vacancyId  BigInt
  skillName  String
  vacancy    Vacancy @relation(fields: [vacancyId], references: [id], onDelete: Cascade)

  @@id([vacancyId, skillName])
}

model RawItem {
  source    String
  hhId      String // Changed to String to support both vacancy IDs (bigint) and resume IDs (text)
  payload   Json
  fetchedAt DateTime @default(now())

  resumes Resume[]

  @@id([source, hhId])
}

model SyncState {
  source     String @id
  lastSeen   DateTime?
  page       Int     @default(0)
}

model User {
  id            BigInt    @id @default(autoincrement())
  email         String    @unique
  password      String
  role          String    @default("user") // "user", "admin", "superadmin"
  emailVerified Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

// Resume-related models
model ManagerToken {
  managerId     BigInt    @id
  accessToken   String
  refreshToken  String?
  dailyLimit    Int       @default(200)
  usedToday     Int       @default(0)
  lastReset     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  resumeAudits  ResumeViewAudit[]
}

model Resume {
  id               String     @id
  title            String?
  areaId           Int?
  areaName         String?
  experienceYears  Int?
  salaryDesired    Decimal?
  currency         String?
  updatedAt        DateTime?
  rawSource        String     // source from raw_item (e.g., "resume")
  rawId            String     // hhId from raw_item
  rawItem          RawItem    @relation(fields: [rawSource, rawId], references: [source, hhId])

  skills           ResumeSkill[]
  viewAudits       ResumeViewAudit[]

  @@unique([rawSource, rawId])
}

model ResumeSkill {
  resumeId  String
  resume    Resume @relation(fields: [resumeId], references: [id], onDelete: Cascade)
  skillName String

  @@id([resumeId, skillName])
}

model ResumeViewAudit {
  id        BigInt       @id @default(autoincrement())
  managerId BigInt
  manager   ManagerToken @relation(fields: [managerId], references: [managerId])
  resumeId  String
  resume    Resume       @relation(fields: [resumeId], references: [id])
  viewedAt  DateTime     @default(now())
}

// Search profiles for both vacancies and resumes
model SearchProfile {
  id           String   @id @default(uuid())
  name         String
  entityType   String   // "vacancy" or "resume"
  params       Json     // HH API query parameters
  enabled      Boolean  @default(true)
  scheduleCron String   @default("30 2 * * *") // Default: 02:30 daily
  lastRun      DateTime?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
